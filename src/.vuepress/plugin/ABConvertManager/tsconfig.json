{
  "compilerOptions": {
    // 模块相关
    "target": "ESNext",
    "module": "ESNext", // CommonJS、ESNext
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ESNext",
      "dom.iterable"
    ],

    // 编译相关
    "rootDir": "./src",           // .ts编译时要编译的位置
    "outDir": "./dist",           // .ts编译 .js     输出位置
    "declaration": true,          // .ts编译 .d.ts   是否输出
    "declarationDir": "./@types", // .ts编译 .d.ts   输出位置
    "sourceMap": true,            // .ts编译 .js.map 是否输出

    // 其他
    "allowJs": true,
    // "strict": true, // vite没事，tsc开严格会报错 (他会说有很多类型都是any)
    "baseUrl": ".",
    "paths": {
      "@anyblock/*": ["./dist/*.js"]
    }
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": ["node_modules"]
}
